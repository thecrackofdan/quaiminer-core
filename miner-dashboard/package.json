{
  "name": "quai-gpu-miner-dashboard",
  "version": "2.2.0",
  "description": "Quai GPU Miner - Simple web interface for Quai Network mining with automatic GPU detection and driver installation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "dev:unix": "NODE_ENV=development node server.js",
    "test": "npm run test:syntax && npm run test:security",
    "test:syntax": "node -c server.js && echo '✅ Syntax check passed'",
    "test:security": "node tests/security-privacy-test.js && node tests/security-implementation-test.js",
    "test:audit": "node tests/security-audit.js",
    "test:all": "npm run test:syntax && npm run test:security",
    "test:unit": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --fix --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{js,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,json,md}\" --ignore-path .gitignore",
    "validate": "npm run lint && npm run format:check && npm run test",
    "verify": "npm run validate && npm audit --audit-level=moderate && echo '✅ Verification complete'",
    "precommit": "npm run lint:fix && npm run format",
    "prepare": "husky install || true"
  },
  "keywords": [
    "quai-gpu-miner",
    "quai",
    "quai-network",
    "mining",
    "gpu-mining",
    "cryptocurrency",
    "progpow",
    "nvidia",
    "amd",
    "miner",
    "dashboard"
  ],
  "author": "thecrackofdan",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "better-sqlite3": "^9.2.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "chart.js": "^4.4.0",
    "pdfkit": "^0.14.0",
    "csv-writer": "^1.6.0",
    "nodemailer": "^6.9.7",
    "node-telegram-bot-api": "^0.64.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "winston": "^3.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "@sentry/node": "^7.91.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thecrackofdan/Quai-GPU-Miner.git",
    "directory": "miner-dashboard"
  },
  "bugs": {
    "url": "https://github.com/thecrackofdan/Quai-GPU-Miner/issues"
  },
  "homepage": "https://github.com/thecrackofdan/Quai-GPU-Miner#readme"
}
